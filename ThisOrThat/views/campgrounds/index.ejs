<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View the campgrounds from wherever, whenever for whomever</p>
            <p>
                <a class="btn btn-outline-info btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
         <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    <img src="<%= campground.image %>" class="img-fluid" alt="responsive image">
                    <div class="figure-caption text-center">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p class="text-center">
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-info btn-md">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>